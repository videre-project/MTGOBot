{
  "compilerOptions": {
    "esModuleInterop": true,
    // "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    // "strict": true,
    "target": "esnext",
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*"
  ]
}